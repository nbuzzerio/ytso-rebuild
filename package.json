{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "set NODE_ENV=development&& nodemon server",
    "build": "NODE_OPTIONS=\"--max_old_space_size=2048\" next build",
    "start": "set NODE_ENV=production&& node server",
    "build:test": "set NODE_ENV=test&& next build",
    "start:test": "set NODE_ENV=test&& node server",
    "cypress:open": "env-cmd -f .env.test.local ./node_modules/.bin/cypress open",
    "cypress:start": "start-server-and-test 'npm run start:test' 3000 cypress:open",
    "cypress:build": "npm run build:test && npm run cypress:start",
    "lint": "next lint",
    "test:server": "set NODE_ENV=testServer&& jest --watch --verbose --detectOpenHandles -- /express",
    "test:ui": "set NODE_ENV=testUI&& jest --watch --verbose --detectOpenHandles -- /ui",
    "coverage": "set NODE_ENV=test&& jest --watch --verbose --detectOpenHandles --coverage"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.9.6",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "dotenv": "^16.0.1",
    "express-rate-limit": "^6.4.0",
    "googleapis": "^107.0.0",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.2",
    "next": "^14.1.0",
    "next-sitemap": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.33.1",
    "sass": "^1.52.1",
    "start-server-and-test": "^1.14.0",
    "winston": "^3.8.1",
    "winston-mongodb": "^5.0.7",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/jquery": "^3.5.14",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "autoprefixer": "^10.4.7",
    "env-cmd": "^10.1.0",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "express": "^4.18.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "msw": "^0.44.2",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.14",
    "supertest": "^6.2.4",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.4"
  }
}
